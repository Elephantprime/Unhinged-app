// Unhinged Level 1 â€” Minimal Firebase Rules
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ”‘ Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // handled by purge system
    }

    // ğŸª™ Clubs collection (for vaults later)
    match /clubs/{clubId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null;
      allow delete: if false;
    }

    // ğŸ¯ Chaos Wall posts
    match /chaoswall/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if false;
    }

    // ğŸ¥ Spotlight videos
    match /spotlight/{spotId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if false;
    }

    // ğŸŒ IRL challenge submissions
    match /irl_submissions/{submissionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if false;
    }
  }
}rules_version = '2'; service cloud.firestore { match /databases/{database}/documents { ... } }
